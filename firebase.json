{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "functions/**",
      "*.code-workspace",
      "firestore-debug.log",
      ".firebaserc",
      ".gitignore"
    ],
    "rewrites": [
      { "source": "/requestAdminPasswordReset", "function": "requestAdminPasswordReset" },
      { "source": "/resolveAdminPasswordReset", "function": "resolveAdminPasswordReset" },
      { "source": "/adminCreateUser", "function": "adminCreateUser" }
    ],
    "headers": [
      {
        "source": "**/*.@(html|js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": { "host": "127.0.0.1", "port": 9099 },
    "hub": { "port": 4401 },
    "ui": { "enabled": true, "port": 4001 },
    "functions": { "host": "127.0.0.1", "port": 5001 },
    "firestore": { "host": "127.0.0.1", "port": 8080 },
    "hosting": { "port": 5002 },
    "logging": { "port": 4501 }
  }
}
